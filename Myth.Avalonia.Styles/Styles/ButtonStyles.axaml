<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:c="using:Porter.Controls">
	<Design.PreviewWith>
		<Border Padding="20" Height="200">

			<Button Grid.Column="4"
					Height="60"
					Classes="no-padding content-center stretch square"
					FontSize="12">
				Start All
			</Button>

		</Border>
	</Design.PreviewWith>

	<Style Selector="Button.square">
		<Setter Property="Height" Value="{Binding $parent.Bounds.Height}"/>
		<Setter Property="Width" Value="{Binding $self.Height}"/>
	</Style>

</Styles>
