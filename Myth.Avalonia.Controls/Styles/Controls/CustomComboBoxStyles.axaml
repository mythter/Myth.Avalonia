<ResourceDictionary xmlns="https://github.com/avaloniaui"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:sys="using:System"
					x:ClassModifier="internal">
	<Design.PreviewWith>
		<Border Padding="20" Width="250" Height="300">
			<StackPanel Spacing="10">

				<CustomComboBox ComboBoxProperties.TextTrimming="CharacterEllipsis">

					<CustomComboBox.DefaultItem>
						<DataTemplate>
							<TextBlock Text="Select SSH server hello world" FontStyle="Italic" Foreground="Gray"/>
						</DataTemplate>
					</CustomComboBox.DefaultItem>

					<ComboBoxItem>Item 1</ComboBoxItem>
					<ComboBoxItem>Item 2</ComboBoxItem>
				</CustomComboBox>

				<ComboBox  PlaceholderText="Long long long placeholder text"
						   ComboBoxProperties.TextTrimming="CharacterEllipsis">

					<ComboBoxItem>Long long long long long long item text 1</ComboBoxItem>
					<ComboBoxItem>Long long long long long long item text 2</ComboBoxItem>
				</ComboBox>

				<Border Width="50">
					<TextBlock Text="some long text"
							   TextTrimming="CharacterEllipsis"/>
				</Border>

			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<ControlTheme x:Key="{x:Type CustomComboBox}" TargetType="CustomComboBox" BasedOn="{StaticResource {x:Type ComboBox}}"/>

</ResourceDictionary>